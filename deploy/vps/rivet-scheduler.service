[Unit]
Description=RIVET Daily KB Building Scheduler
After=network.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/Agent-Factory
Environment=PATH=/root/.local/bin:/usr/local/bin:/usr/bin
EnvironmentFile=/root/Agent-Factory/.env
ExecStart=/root/.local/bin/poetry run python scripts/automation/simple_url_scheduler.py
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=1G
CPUQuota=75%

# Timeout (30 minutes max)
TimeoutSec=1800

[Install]
WantedBy=multi-user.target
